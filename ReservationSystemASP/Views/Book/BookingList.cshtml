

<div class="container-fluid m-3">
    <h2>Lista zarezerwowanych seansów</h2>
    <table class="table">
        @foreach (var book in Model){
            <tr>
                <td>
                    Masz zarezerwowany seans numer @book.Seanse
                </td>
                <td>
                    @if (User.Identity.Name == "Admin")
                    {
                    <a class="btn btn-primary" asp-controller="Book" asp-action="EditForm" asp-route-id="@book.Id">Edytuj</a>
                    <a class="btn btn-primary" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id">Usuń</a>
                    }
                </td>
            </tr>
        }
    </table>
    </div>