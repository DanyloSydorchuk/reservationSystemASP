@model ReservationSystemASP.Models.SeanseModel

<div class="container m-3">
    <h2>Edycja seansu</h2>
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All"></div>
        <input asp-for="Id" />
        <div class="mb-3">
            <span asp-validation-for="Date" class="text-danger"></span>
            <label asp-for="Date">Data</label>
            <input class="form-control" asp-for="Date" />
        </div>
        <div class="mb-3">
            <span asp-validation-for="SeanseStart" class="text-danger"></span>
            <label asp-for="SeanseStart">Rozpoczęcie seansu</label>
            <input class="form-control" asp-for="SeanseStart" />
        </div>
        <div class="mb-3">
            <span asp-validation-for="SeanseEnd" class="text-danger"></span>
            <label asp-for="SeanseEnd">Zakończenie seansu</label>
            <input class="form-control" asp-for="SeanseEnd" />
        </div>
        <div class="mb-3">
            <span asp-validation-for="CountPlaces" class="text-danger"></span>
            <label asp-for="CountPlaces">Liczba miejsc</label>
            <input class="form-control" asp-for="CountPlaces" />
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Edytuj</button>
        </div>
    </form>
</div>

